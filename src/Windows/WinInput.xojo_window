#tag WindowCode
	#tag Method, Flags = &h0
		Shared Function ShowPrompt(prompt As String) As String
		  Dim win As New WinInput
		  win.LabelPrompt.Text = prompt
		  win.ShowModal
		  
		  Return win.Result
		End Function
	#tag EndMethod


	#tag Property, Flags = &h0
		Result As String
	#tag EndProperty


